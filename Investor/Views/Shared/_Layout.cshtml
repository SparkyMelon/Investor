                        </li>
                    </ul>
                </div>
                <form class="form-inline my-2 my-lg-0">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("Username") != null && HttpContextAccessor.HttpContext.Session.GetString("Username") != "")
                    {
                        <p>Hello, @HttpContextAccessor.HttpContext.Session.GetString("Username")</p>
                    }
                    else
                    {
                        <button class="btn btn-inv my-2 my-sm-0" type="button" onclick="window.location.href='@Url.Action("Index", "Login")'">Log in / Sign up</button>
                    }
                </form>
            </div>
        </nav>
    </header>
